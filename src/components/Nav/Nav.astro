---
import Logo from '@components/Logo.astro'
import NavItem from '@components/Nav/NavItem.astro'
import Button from '@components/Button.astro'
import NavOverlay from './NavOverlay.astro'
import NavDrop from './NavDrop.astro'
---

<div class="nav fixed top-0 left-0 right-0 z-20">
    <div class="_container relative z-30">
        <div class="grid py-7 grid-cols-3">
            <a class="nav_logo w-28" href="/">
                <Logo />
            </a>
            <div class="flex flex-row gap-8 items-center justify-center">
                <NavItem link="/" text="Home" />
                <NavDrop text="Products" />
                <NavItem link="/" text="About us" />
                <NavItem link="/" text="News" />
            </div>
            <div class="justify-self-end">
                <Button link="/" text="Request a demo"/>
            </div>
        </div>
    </div>
    <NavOverlay />
    <div class="nav-overlay-bg absolute top-0 left-0 right-0 bg-black h-lvh"></div>
</div>