---
interface Props
{
    img: any,
    title: string,
    descr: string,
    position: string,
}

import { Image } from "astro:assets"

const props = Astro.props
---

<div class="phone_tile absolute p-6 flex flex-col gap-6 w-56" class:list={[props.position]}>
    <div class="aspect-square w-8 relative z-10">
        <Image src={props.img} width={props.img.width} height={props.img.height} alt={props.title}/>
    </div>
    <div class="flex flex-col gap-1 relative z-10">
        <div class="_16">{props.title}</div>
        <div class="_13 opacity-50">{props.descr}</div>
    </div>
</div>