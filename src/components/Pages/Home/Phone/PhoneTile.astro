---
interface Props
{
    img: any,
    title: string,
    descr: string,
    position: string,
}

import { Image } from "astro:assets"

const props = Astro.props
---

<div class="phone_tile absolute p-6 flex flex-col gap-6 w-56 tablet:w-44 sm:w-32 sm:p-4" class:list={[props.position]}>
    <div class="aspect-square w-8 relative z-10 sm:w-7">
        <!-- <Image src={props.img} format="svg" width={32} height={32} alt={props.title}/> -->
        <img data-src={props.img} width={32} height={32} alt={props.title}/>
    </div>
    <div class="flex flex-col gap-1 relative z-10">
        <div class="_16 sm:text-14">{props.title}</div>
        <div class="_13 sm:text-12 opacity-50">{props.descr}</div>
    </div>
</div>