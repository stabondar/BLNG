---
import Subtitle from "@components/Subtitle.astro"
import Title from "@components/Title.astro"
import StepsItems from "./Steps/StepsItems.astro"

import video from '@static/steps/steps-video-1.mp4'

const items = 
[
    {title: 'CAD Model', video: video},
    {title: 'Render', video: video},
    {title: 'Market-ready', video: video},
]
---

<section class="pt-48" black-trigger section-studio>
    <div class="_container">
        <div class="flex flex-col gap-12 mb-24">
            <Subtitle color="#FC502A" title="Explore" higlight="Studio" alignText="text-center" align="justify-center"/>
            <Title h2={true} size={650} title=`From CAD Models. To market-ready content`/>
        </div>
        <div class="grid grid-cols-3 gap-5">
            {items.map((item, index) => <StepsItems index=`0${index + 1}` title={item.title} video={item.video}/>)}
        </div>
    </div>
</section>